<!DOCTYPE html>
<html>
<head>
  <title>Weekly Meal Plan</title>
  <link rel="stylesheet" href="/style.css">
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Roboto', sans-serif;
      background: #f9f9f9;
      margin: 0;
      padding: 0;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    header {
      background: #ff7043;
      width: 100%;
      padding: 20px 0;
      color: white;
      text-align: center;
      box-shadow: 0 4px 6px rgba(0,0,0,0.2);
    }

    .container {
      width: 90%;
      max-width: 800px;
      margin-top: 30px;
    }

    .links {
      display: flex;
      justify-content: space-between;
      margin-bottom: 30px;
    }

    .links a {
      text-decoration: none;
      color: #ff7043;
      font-weight: 600;
    }

    .links a:hover {
      text-decoration: underline;
    }

    .day-card {
      background: white;
      padding: 20px 25px;
      margin-bottom: 20px;
      border-radius: 12px;
      box-shadow: 0 6px 15px rgba(0,0,0,0.1);
    }

    .day-card h3 {
      margin-top: 0;
      color: #ff7043;
    }

    .day-card p {
      margin: 5px 0;
      color: #555;
    }

    hr {
      border: none;
      border-top: 1px solid #eee;
      margin: 15px 0;
    }
  </style>
</head>
<body>

  <header>
    <h2>ðŸ“… Weekly Meal Plan</h2>
  </header>

  <div class="container">

    <div class="links">
      <a href="/add-meal">Add Meal</a>
      <a href="/meals">View All Meals</a>
      <a href="/">Home</a>
      <a href="/weekly-plan">Regenerate Plan</a>
      <a href="/shopping-list">Generate Shopping List</a>
    </div>

    <% weekPlan.forEach(day => { %>
      <div class="day-card">
        <h3><%= day.day %></h3>
        <p><strong>Breakfast:</strong> <%= day.breakfast ? day.breakfast.mealName : "No meal" %></p>
        <p><strong>Lunch:</strong> <%= day.lunch ? day.lunch.mealName : "No meal" %></p>
        <p><strong>Dinner:</strong> <%= day.dinner ? day.dinner.mealName : "No meal" %></p>
      </div>
    <% }) %>

  </div>

</body>
</html>
